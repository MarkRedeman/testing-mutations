                            'executable' => 'vendor/bin/phpunit',
                            'bootstrap' => 'vendor/autoload.php',
                            'options' => [
                                '--stop-on-failure'
                            ]
                        ],
                        'phpspec' => [
                            'executable' => 'bin/phpspec',
                            'bootstrap' => 'vendor/autoload.php',
